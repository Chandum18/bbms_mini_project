  <script>
    const form = document.getElementById('voteForm');

    form.addEventListener('submit', function(e) {
      e.preventDefault();
      const selectedCandidateVal = form.candidate.value;
      const selectedCandidateName = Array.from(form.candidate)
        .find(input => input.value === selectedCandidateVal)
        .parentElement.querySelector('.candidate-name').textContent;

      if (confirm(`Are you sure you want to vote for ${selectedCandidateName}?`)) {
        // TODO: Send selectedCandidateVal to backend to record vote
        alert(`Thank you for voting for ${selectedCandidateName}.`);
        form.reset();
      }
    });
  </script>
